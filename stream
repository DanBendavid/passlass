# --- Page PASS LAS2 ----------------------------------------------------------
elif choix_page == "PASS LAS2":
    st.title("ğŸ§® Simulation PASS â†’ LAS2")
    st.text("Les champs Rang PASS et LAS2 seront verrouillÃ©s aprÃ¨s la premiÃ¨re simulation.")

    # Initialisation session et cookies
    COOKIE_NAME = "simu_lock"
    PREFIX = "demo_app/"
    PASSWORD = os.environ.get("COOKIES_PASSWORD", "changeme_en_local")

    # Setup des clÃ©s session
    for k in (
        "rank_m1_locked",
        "rank_m2_locked",
        "size_m2_locked",
        "nom_las_locked",
        "cookie_processed",
    ):
        st.session_state.setdefault(k, None)

    cookies = EncryptedCookieManager(prefix=PREFIX, password=PASSWORD)
    if not cookies.ready():
        st.write("âŒ› Initialisation des cookiesâ€¦")
        st.stop()

    # Lecture et parsing du cookie
    cookie_val = cookies.get(COOKIE_NAME, "")
    if cookie_val and st.session_state.get("cookie_processed") is None:
        parts = cookie_val.split("-")
        if len(parts) == 4:
            try:
                r1, r2, sz, nom = parts
                st.session_state.update({
                    "rank_m1_locked": int(r1),
                    "rank_m2_locked": int(r2),
                    "size_m2_locked": int(sz),
                    "nom_las_locked": nom,
                    "cookie_processed": True,
                })
                st.rerun()
            except ValueError:
                st.warning("Cookie mal formÃ© ; ignorÃ©.")
        else:
            st.warning("Cookie mal formÃ© ; ignorÃ©.")

    # Inputs utilisateur (verrouillage si dÃ©jÃ  saisi)
    rank_m1 = st.number_input(
        "ğŸ“ Rang PASS 'non coefficientÃ©' (1â€“1799)",
        min_value=1,
        max_value=1799,
        value=st.session_state.rank_m1_locked or 100,
        disabled=bool(st.session_state.rank_m1_locked),
    )
    nom_las = st.text_input(
        "ğŸ« Nom de votre LAS",
        value=st.session_state.nom_las_locked or "",
        disabled=bool(st.session_state.nom_las_locked),
    )
    size_m2 = st.number_input(
        "ğŸ‘¥ Taille LAS2",
        min_value=2,
        value=st.session_state.size_m2_locked or 456,
        disabled=bool(st.session_state.size_m2_locked),
    )
    rank_m2 = st.number_input(
        "ğŸ“ Rang LAS2",
        min_value=1,
        max_value=300,
        value=st.session_state.rank_m2_locked or 50,
        disabled=bool(st.session_state.rank_m2_locked),
    )
    rang_souhaite = st.number_input(
        "ğŸ¯ Rang souhaitÃ© (sur 884)", min_value=1, max_value=884, value=200
    )
    rho = st.slider("ğŸ”— CorrÃ©lation PASS / LAS", 0.65, 1.0, 0.85, step=0.05)
    n = st.number_input("ğŸ” Nombre de simulations", 100, 20000, 10000, step=1000)
    show_graph = st.checkbox("ğŸ“ˆ Afficher graphique", value=True)

    if st.button("Lancer la simulation"):
        note_m1 = convert_rank_to_note_m1(rank_m1)
        note_m2 = convert_rank_to_note_m2(rank_m2, size_m2)
        st.write(f"ğŸ§® Note PASS : {note_m1:.2f} â€“ Note LAS2 : {note_m2:.2f}")

        # Verrouillage
        st.session_state.update({
            "rank_m1_locked": rank_m1,
            "rank_m2_locked": rank_m2,
            "size_m2_locked": size_m2,
            "nom_las_locked": nom_las,
        })
        cookies[COOKIE_NAME] = f"{rank_m1}-{rank_m2}-{size_m2}-{nom_las}"
        cookies.save()

        # Simulation
        p, se = simulate_student_ranking(
            n_simulations=n,
            rang_souhaite=rang_souhaite,
            note_m1_perso=note_m1,
            note_m2_perso=note_m2,
            rho=rho,
            n_workers=4,
        )

        # Graphique
        if show_graph:
            st.subheader("ğŸ“‰ ProbabilitÃ© autour du rang souhaitÃ©")
            fig, ax = plt.subplots()
            ranks = np.arange(max(1, rang_souhaite-50), min(884, rang_souhaite+51), 2)
            pvals = [simulate_student_ranking(
                        rang_souhaite=rr,
                        rho=rho,
                        n_simulations=1000,
                        note_m1_perso=note_m1,
                        note_m2_perso=note_m2,
                        n_workers=4,
                    )[0] for rr in ranks]
            ax.plot(ranks, pvals, label=f"Ï = {rho}")
            ax.set_xlabel("Rang souhaitÃ©")
            ax.set_ylabel("ProbabilitÃ©")
            ax.set_title("ProbabilitÃ© d'atteindre un rang donnÃ©")
            ax.grid(True)
            ax.legend()
            st.pyplot(fig)

        # Message de rÃ©sultat
        if p > 0.5:
            st.success(f"ğŸ”” ProbabilitÃ© de top {rang_souhaite} : {int(p*100)}% Â± {int(se*100)}%")
        else:
            st.warning(f"âš ï¸ Vos chances sont {int(p*100)}% Â± {int(se*100)}% (<50%)")

        # Enregistrement Google Sheet
        if collect_to_google_sheet(
